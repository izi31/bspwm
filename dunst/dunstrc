[global]
    # Set the font (you can change this to your preferred font)
    font = Monospace 10

    # Geometry and positioning
    geometry = "300x5-10+50"
    # Position notifications at the top-right corner
    corner = top_right

    # Set the notification timeout (in milliseconds)
    timeout = 5000

    # Transparency (0-1)
    transparency = 0.9

    # Show frame around notifications
    frame_width = 1

    # Icon position: left or off
    icon_position = left

    # Set urgency timeout to 0 (sticky) for critical
    urgency_critical_timeout = 0

    # Max number of notifications shown simultaneously
    max_notifications = 5

[urgency_low]
    background = #282828
    foreground = #928374
    frame_color = #3c3836
    timeout = 4000

[urgency_normal]
    background = #1d2021
    foreground = #ebdbb2
    frame_color = #458588
    timeout = 5000

[urgency_critical]
    background = #cc241d
    foreground = #fbf1c7
    frame_color = #fb4934
    timeout = 0
